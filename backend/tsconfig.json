{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "rootDirs": ["./src", "./test", "./scripts", "./database"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": ["es2017"]
  }
}